<div id="board_container">

  <div class="player_container player_one">
    <div class="ability_container">
      <form method="post" action="/use_ability">
        <table class="ability_table">
          <% @board.get_ship_abilities(:player_one).each.with_index do |a,i| %>
            <% if i % 4 == 0 %>
              <tr>
            <% end %>

            <td><input type="image" src="crosshair.png" name="attack" value=<%= a[:name] %>><p><%= a[:name] %></p></td>

            <% if i % 4 == 3 %>
              </tr>
            <% end %>
          <% end %>
        </table>
      </form>
    </div>
    <div class="card_container">
      <div class="health_bar_container">
        <label>HP: </label>
        <div class="health_bar">
          <div class="health_fill <%= @board.get_health_bar_class(:player_one) %>"></div>
        </div>
      </div>
        <div class="ship_stats_container">
          <p>insert ship attack power here</p>
        </div>
    </div>
  </div>

  <div id="combat_log_container">
    <div id="combat_log">
      <% @combat_log.each do |c| %>
        <p class="combat_line"><%= c %></p>
      <% end %>
    </div>
  </div>

  <div class="player_container player_two">
